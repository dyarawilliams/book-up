<div class="container d-flex flex-column justify-content-center align-items-center">
    <h2 class="">Welcome to</h3>
    <img src="./images/bookup-welcome.png" alt="">
    <form action="" class="mt-3">
        <input type="search" name="name" placeholder="Search by ISBN, author or book">
        <input type="submit" value="Search">
    </form>

    <div class="mt-3">
        <h2>Recently Added</h2>
        <div>
            <% books.forEach(book => { %>
                <img src="<%= book.coverImagePath %>" alt="" width='200' height='250'>
            <% }) %>
        </div>
    </div>
</div>
