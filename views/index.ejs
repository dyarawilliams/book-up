<section class="welcome text-center">
    <header>
        <h1 class="display-2 fw-bold">Welcome to Book Up</h1>
        <img src="../../images/book-lover.png" alt="Book Lover Illustration" class="slide-in">
    </header>
    
    <form action="" class="mt-2">
        <input type="search" name="name" class="form-control w-50 mx-auto p-3 text-center rounded-pill" placeholder="Search by author or book" />
        <input type="submit" value="Search" class="mt-3" />
    </form>
</section>
<section id="books" class="books">
    <div class="container">
        <div class="row text-center mt-1">
            <h3 class="text-capitalize">Recently Added</h3>
            <div class="heading-line"></div>
            <p class="lead">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Voluptates dolore veritatis omnis quod sunt! Neque!</p>
        </div>
        <!-- FILTER BUTTONS -->
        <!-- <div class="row text-center mt-2 mb-4 h-3">
            <div class="col-md-12">
                <button class="btn btn-outline-primary">All</button>
                <button class="btn btn-outline-primary">Today</button>
                <button class="btn btn-outline-primary">Yesterday</button>
            </div>
        </div> -->

        <div class="row">
            <!-- START OF BOOK ITEMS  -->
            <% books.forEach(book=> { %>
                <div class="col-6 col-sm-4">
                    <a href="/books/<%= book.id %>">
                        <img src="<%= book.coverImagePath %>" alt="Book Cover" class="img-fluid" width="200">
                    </a>
                </div>
                <% }) %>
            <!-- END OF BOOK ITEMS  -->
        </div>
    </div>
</section>
