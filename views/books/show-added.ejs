<h1 class="text-center pt-3 pb-3">MY BOOKS ADDED</h1>

<table class="table content-table">
    <thead>
        <tr class="text-white">
            <th scope="col">Cover</th>
            <th scope="col">Title & Author</th>
            <th scope="col">Page Count</th>
            <th scope="col">Rating</th>
            <th scope="col">Date added</th>
        </tr>
    </thead>
    <tbody>
        <% books.forEach(book => { %>
            <tr>
                <td scope="row"><img src="<%= book.coverImagePath %>" class="img-fluid" width="70"></td>
                <td class="w-25">
                    <%= book.title %><br>
                    By: <%= book.author.name %>
                </td>
                <td><%= book.pageCount %></td>
                <td><%= book.rating %></td>
                <td><%= book.dateAdded %></td>
            </tr>
        <% }) %>
    </tbody>
</table>