<section id="login" class="w-100 h-100 d-flex justify-content-center">
    <section class="login-form">
        <% if (locals.messages.errors) { %>
            <% messages.errors.forEach( el => { %>
                <div class="alert alert-danger"><%= el.msg %></div>
            <% }) %>    
        <% } %>
        <% if (locals.messages.info) { %>
            <% messages.info.forEach( el => { %>
                <section class="alert alert-danger"><%= el.msg %></div>
            <% }) %>    
        <% } %>
        <form action="/login" method="POST" class="mt-4">
            <p class="text-center">Please login to your account</p>

            <div class="form-outline mb-3">
                <label class="form-label" for="form2Example11">Email</label>
                <input type="email" name="email" id="form2Example11" class="form-control"
                    placeholder="Email address" />
            </div>

            <div class="form-outline mb-3">
                <label class="form-label" for="form2Example22">Password</label>
                <input type="password" name="password" id="form2Example22" class="form-control" placeholder="Password" />
            </div>

            <div class="d-flex flex-column mb-3">
                <input type="submit" value="Login" class="btn btn-success w-75 mb-3 align-self-center">
                <!-- <a class="text-muted" href="#!">Forgot password?</a> -->
                <a href="/auth/google" class="btn-google btn">
                    <img src="/images/google.png" alt="google icon">
                    <span>Continue with Google</span>
                </a>
            </div>

            <div class="d-flex flex-column">
                <p class="text-center">Don't have an account?</p>
                <a href="/signup" class="btn btn-outline-primary w-100 align-self-center">Create an Account</a>
            </div>

        </form>
    </section>
</section>