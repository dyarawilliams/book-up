<div class="login-card" id="login-card">
    <div class="form-container sign-up-container">
        <form action="#">
            <h1>Create Account</h1>
            <div class="social-media">
                <a href="#" class="social"><i class="fab fa-google"></i>Continue with Google</a>
            </div>
            <span>or sign up using your email account</span>
            <input type="text" placeholder="Name" required>
            <input type="text" placeholder="Email" required>
            <input type="text" placeholder="Password" required>
            <button>Sign Up</button>

        </form>
    </div>
    <div class="form-container log-in-container">
        <form action="#">
            <h1>Log In</h1>
            <div class="social-media">
                <a href="#" class="social"><i class="fab fa-google"></i>Continue with Google</a>
            </div>
            <span>or sign up using your email account</span>
            <input type="text" placeholder="Email" required>
            <input type="text" placeholder="Password" required>
            <a href="#">Forgot your password?</a>
            <button>Sign In</button>

        </form>
    </div>
    <div class="overlay-container">
        <div class="overlay">
            <div class="overlay-panel left">
                <h1>Welcome Back!</h1>
                <p>To keep connected with us please login with your personal info</p>
                <button class="ghost" id="signIn">Log In</button>
            </div>
            <div class="overlay-panel right">
                <h1>Hi, Stranger!</h1>
                <p>Sign up for an account and start your journey now!!</p>
                <button class="ghost" id="signUp">Sign Up</button>
            </div>
        </div>
    </div>
</div>