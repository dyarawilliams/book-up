<section class="welcome mt-4">
    <h2>Welcome, <%= user.userName %></h2>
    <img src="" alt="Profile picture of user ">
</section>

<section class="search-bar mt-4">
    <form id="searchForm" class="d-flex">
        <input type="text" id="searchInput" class="form-control me-2"
            placeholder="Search by Title, or Author">
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
</section>

<section class="stats row mt-4">
    <div class="col-md-4">
        <div class="stats-card">
            <div class="icon">üìö</div>
            <h3>
                <%= booksCount %>
            </h3>
            <p>Total Books</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="stats-card">
            <div class="icon">üñãÔ∏è</div>
            <h3>
                <%= authorsCount %>
            </h3>
            <p>Total Authors</p>
        </div>
    </div>
</section>

<section class="books-grid mt-4 mb-4">
    <% books.forEach(book=> { %>
        <div class="book-card">
            <a href="/books/<%= book.id %>" class="d-flex justify-content-center">
                <img src="<%= book.coverImagePath %>" alt="Book Cover">
            </a> 
            <div class="details">
                <h5><%= book.title %></h5>
                <span>by <%= book.author %></span>
                <!-- <span><b>ISBN13:</b> <% book.isbn %></span> -->
            </div>
        </div>
        <% }) %>
</section>

