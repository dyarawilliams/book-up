<div class="author-view container">
    <h2> <%= author.name %></h2>
    <div class="d-flex">
        <a href="/authors/<%= author.id %>/edit" class="btn btn-sm btn-success mx-3"><i class="fa-solid fa-pen-to-square"></i></a>
        <%- include('../partials/deleteForm', { url: `/authors/${author.id}` }) %>
    </div>

    <% if(booksByAuthor.length > 0) { %>
        <h2>Books By Author</h2>
        <div class="row">
            <!-- START OF BOOK ITEMS  -->
            <% booksByAuthor.forEach(book => { %>
                <div class="col-6 col-sm-4">
                    <a href="/books/<%= book.id %>">
                        <img src="<%= book.coverImagePath %>" alt="Book Cover" class="img-fluid" width="200" />
                    </a>
                </div>
            <% }) %>
            <!-- END OF BOOK ITEMS  -->
        </div>
    <% } %>
</div>